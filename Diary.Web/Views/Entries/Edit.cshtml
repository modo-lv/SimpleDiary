@using Diary.Api.Dtos
@using Simpler.Net.Mvc

@model EntryDto

@{
	this.Layout = "_Layout";
}

@using (Html.BeginForm(FormMethod.Post)) {
	@Html.SimplerTextBoxFor(m => m.Id).SetAttributes("readonly", "disabled")
	@Html.SimplerTextBoxFor(m => m.Timestamp).SetAttribute("data-provide", "datepicker")
	@Html.SimplerTextBoxFor(m => m.Title)
	@Html.TextAreaFor(m => m.Content)

	<input type="submit" value="Save"/>
}